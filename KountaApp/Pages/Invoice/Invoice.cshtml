<script>
    // Function to add a new row to the invoice table
    function addRow() {
        // Get the table body element
        var tableBody = document.getElementById("invoiceTableBody");

        // Create a new row
        var newRow = document.createElement("tr");

        // Add cells to the row
        newRow.innerHTML = `
            <th scope="row">${tableBody.children.length + 1}</th>
            <td><input type="text" class="form-control"></td>
            <td><input type="number" class="form-control text-end"></td>
            <td><input type="number" class="form-control text-end"></td>
            <td><input type="number" class="form-control text-end"></td>
            <td class="NoPrint"><button type="button" class="btn btn-danger" onclick="deleteRow(this)">x</button></td>
        `;

        // Append the new row to the table body
        tableBody.appendChild(newRow);
    }

    // Function to delete a row from the invoice table
    function deleteRow(button) {
        // Get the row containing the clicked button
        var row = button.parentNode.parentNode;

        // Get the table body containing the row
        var tableBody = row.parentNode;

        // Remove the row from the table
        tableBody.removeChild(row);

        // Update row numbers after deletion
        updateRowNumbers();
    }

    // Function to update row numbers after a row deletion
    function updateRowNumbers() {
        var tableBody = document.getElementById("invoiceTableBody");

        // Loop through rows and update the first cell (row number) in each row
        for (var i = 0; i < tableBody.children.length; i++) {
            tableBody.children[i].children[0].textContent = i + 1;
        }
    }

</script>



