        <script>
            var fromDate;
            var toDate;


            const salesData = [
                { productName: "Photography", quantity: 100, rate: 50.00 },
                { productName: "Videography", quantity: 75, rate: 50.00 },
                // Add more sales data objects as needed
            ];
            // Creating a SalesRequest object
        

            document.addEventListener("DOMContentLoaded", function () {
                const dateContainer = document.getElementById("dateContainer");
                const buttonContainer = document.getElementById("buttonContainer");

                function areDatesSelected() {
                    const fromDateInput = document.getElementById("fromDate");
                    const toDateInput = document.getElementById("toDate");
                    return fromDateInput.value && toDateInput.value;
                }

                function generateReportButton() {
                    if (areDatesSelected()) {
                        const generateReportButton = document.createElement("button");
                        generateReportButton.classList.add("btn", "btn-primary");
                        generateReportButton.type = "button";
                        generateReportButton.textContent = "Display Data";
                        generateReportButton.onclick = function () {
                            fetchAndRenderData();
                        };

                        buttonContainer.innerHTML = "";
                        buttonContainer.appendChild(generateReportButton);
                    } else {
                        buttonContainer.innerHTML = "";
                    }
                }

                dateContainer.addEventListener("change", generateReportButton);
            });


            
            // Function to calculate revenue for a product
            function calculateRevenue(quantity, rate) {
                return quantity * rate;
            }
            // JavaScript function to collect table data and send the request
            function fetchAndRenderData() {
                
                fromDate = document.getElementById("fromDate").value;
                toDate = document.getElementById("toDate").value;

                const tableBody = document.querySelector("#salesTable");
                let totalRevenue = 0;

                // Clear existing table rows
                tableBody.innerHTML = "";

                // Iterate through dummyData and generate table rows
                salesData.forEach((item) => {
                    const revenue = calculateRevenue(item.quantity, item.rate);
                    totalRevenue += revenue;

                    // Create table row and cells
                    const row = document.createElement("tr");
                    row.innerHTML = `
                        <td>${item.productName}</td>
                        <td>${item.quantity}/${item.rate}</td>
                        <td>R${revenue.toFixed(2)}</td>
                    `;

                    // Append row to the table body
                    tableBody.appendChild(row);
                });
                // Store totalRevenue in a global variable or a closure variable accessible by printPdfButton function
                window.totalRevenue = totalRevenue;
                // Display total revenue
                const totalRevenueElement = document.getElementById("totalRevenue");
                totalRevenueElement.textContent = `R${totalRevenue.toFixed(2)}`;

            
            }
            
            

            //Print pdf
            function printPdfButton() {

              // Get the fromDate and toDate values from the input fields
                var fromDate = document.getElementById("fromDate").value;
                var toDate = document.getElementById("toDate").value;

                // Validate fromDate and toDate values
                if (!fromDate || !toDate) {
                    console.error("Invalid date range");
                    return;
                }


                const salesRequest = {
                    salesItems: salesData,
                    reportTitle: "Sales Report",
                    totalSales: window.totalRevenue.toFixed(2), // Calculate the total sales here if needed
                    totalExpenses: 0, // Calculate the total expenses here if needed
                    netIncome: 0, // Calculate the net income here if needed
                    From: fromDate,
                    To: toDate
                };
                console.log(window.totalRevenue.toFixed(2));
                const requestOptions = {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(salesRequest),
                };

                // Fetch the PDF from your API
                fetch('https://pdf-api-zuri.azurewebsites.net/api/pdf/generate-sales-report', requestOptions)
                    .then(response => {
                        //console.log(response.blob()
                        return response.blob(); // Convert the response to a Blob
                    })
                    .then(blob => {
                        const url = URL.createObjectURL(blob); // Create a URL for the Blob

                        // Open the PDF in a new tab
                        window.open(url, '_blank');

                        // Release the URL after use
                        URL.revokeObjectURL(url);
                    })
                    .catch(error => {
                        console.error('Error generating PDF:', error);
                    });
            }
         
         
                 
